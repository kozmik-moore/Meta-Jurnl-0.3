#: import Factory kivy.factory.Factory
#: import GenericLabel base_widgets.GenericLabel
#: import GenericAlignedTextInput base_widgets.GenericAlignedTextInput
#: import notransition kivy.uix.screenmanager.NoTransition
#: set light_blue (0, .5, .8, 1)
#: set dark_gray (.1, .1, .1, .5)
#: set transparent (0, 0, 0, 0)

<JournalInterface>:
    orientation: 'vertical'
    spacing: 2
    padding: 3
    BoxLayout:
        canvas.before:
            Color:
                rgba: transparent
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height
        padding: 5
        size_hint_y: None
        height: 35
        AnchorLayout:
            anchor_x: 'left'
            MenuButton:
                text: 'Menu'
                size_hint_x: None
                width: 150
        AnchorLayout:
            anchor_x: 'right'
            MenuButton:
                text: 'Switch'
                size_hint_x: None
                width: 150
                on_release:
                    root.screen = 'writer' if root.screen == 'reader' else 'reader'
    ScreenManager:
        current: root.screen
        transition: notransition()
        Screen:
            name: 'writer'
            WritingModule:
                id: writer_module
                database: root.database
        Screen:
            name: 'reader'
            ReadingModule:
                id: reader_module
                database: root.database